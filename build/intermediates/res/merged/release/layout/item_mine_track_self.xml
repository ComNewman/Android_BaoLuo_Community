<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F4" >

    <RelativeLayout
        android:id="@+id/rl_mine_track_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riv_mine_track_self"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="14dp"
        android:padding="9dp"
        android:background="@drawable/bg_mine_track" >
        <TextView 
            android:id="@+id/tv_mine_track_self_month"
            style="@style/text_big"
            android:text="10月"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView 
            android:id="@+id/tv_mine_track_self_nick"
            style="@style/text_setting_main"
            android:text="Ryan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView 
            android:layout_below="@+id/tv_mine_track_self_nick"
            style="@style/text_big"
            android:text="Ryan发布了一个活动"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_mine_track_self_content"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        
         <TextView 
            android:id="@+id/tv_mine_track_self_integral"
            android:layout_below="@+id/tv_mine_track_self_content"
            style="@style/text_small"
            android:text="本次活动获得积分2分"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
         <TextView 
            android:id="@+id/tv_mine_track_self_date"
            android:layout_alignBottom="@+id/tv_mine_track_self_integral"
            style="@style/text_small_tinge"
            android:text="10/15"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        
    </RelativeLayout>

    <com.baoluo.community.ui.customview.RoundImageView
        android:id="@+id/riv_mine_track_self"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/head_default"
        lls:border_inside_color="#EFF0F4"
        lls:border_thickness="2dp" />

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/item_mine_track_self.xml -->