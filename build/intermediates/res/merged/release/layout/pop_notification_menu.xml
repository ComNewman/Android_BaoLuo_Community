<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_pop_add"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_pop_reply_friend"
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <ImageView
                android:id="@+id/img_pop_add_group"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_notification_pop_repy_friend" />

            <TextView
                android:id="@+id/tv_pop_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_pop_add_group"
                android:text="发给朋友"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_pop_add_spilit" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pop_cancle_attend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.66" >

            <ImageView
                android:id="@+id/img_pop_add_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_notification_pop_cancle_attend" />

            <TextView
                android:id="@+id/tv_pop_add_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_pop_add_add"
                android:text="不再关注"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/pop_notification_menu.xml -->