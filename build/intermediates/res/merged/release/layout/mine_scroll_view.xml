<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_mine_top"
        android:layout_width="match_parent"
        android:layout_height="288dp" >

        <ImageView
            android:id="@+id/iv_mine_top_bac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_jianbian_nor"
            android:scaleType="fitXY"
            android:src="@drawable/bg_no_pic"
            android:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_jianbian_nor" />

        <com.baoluo.community.ui.customview.RoundImageView
            android:id="@+id/riv_mine_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:src="@drawable/head_default"
            lls:border_inside_color="#fffff1"
            lls:border_thickness="2dp" />

        <ImageView
            android:id="@+id/iv_mine_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/riv_mine_head"
            android:layout_alignRight="@+id/riv_mine_head"
            android:layout_margin="4dp"
            android:src="@drawable/ic_nv" />

        <TextView
            android:id="@+id/tv_mine_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riv_mine_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="用户昵称"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mine_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mine_nick"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="账号：宝落用户名"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_mine_top_bottom"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_mine_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_mine_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="相册"
                android:textColor="@drawable/selector_color_event_classify"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/bg_fenge" />

        <RelativeLayout
            android:id="@+id/ll_mine_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="足迹"
                android:textColor="@drawable/selector_color_event_classify"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <com.baoluo.community.ui.customview.ListViewForScrollView
        android:id="@+id/lv_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF0F4" />

</LinearLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/mine_scroll_view.xml -->