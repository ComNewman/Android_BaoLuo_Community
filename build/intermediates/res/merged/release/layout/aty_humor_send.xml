<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_send_color"
    android:orientation="vertical">
    
    <com.baoluo.community.ui.customview.HeadView
        android:id="@+id/hv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        lls:title_value="@string/head_humor_send_title"
        lls:left_icon="@drawable/ic_fanhui_nor"
        lls:right_icon="@drawable/ic_create"/>
    
    <RelativeLayout 
        android:id="@+id/rl_humor_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/hv_head"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/send_margin_width"
        android:layout_marginRight="@dimen/send_margin_width"
        android:background="@drawable/bg_white_radius_border">
        <ImageView
            android:id="@+id/iv_add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_humor_send"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_add_img"
            android:layout_marginTop="5dp"
            android:textColor="#8f8f8f"
            android:textSize="14sp"
            android:text="添加图片"/>
        <ImageView 
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <com.baoluo.community.ui.customview.ImageTagView 
            android:id="@+id/itv_tags"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:layout_alignTop="@id/iv_img"/>
        <com.baoluo.community.ui.customview.RoundImageView
            android:id="@+id/rv_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/bitboy"/>
        <TextView
            android:id="@+id/tv_humor_send_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rv_avatar"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@id/rv_avatar"
            android:layout_alignBottom="@id/rv_avatar"
            android:gravity="center_vertical"
            android:textColor="@color/send_text_color"
            android:textSize="14sp"
            android:text="极致帅哥"/>
        <ImageView 
            android:id="@+id/iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@id/rv_avatar"
            android:background="@anim/voice_frame"
            android:visibility="gone"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/rl_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_humor_send_1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_page1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent" />
        <Button
            android:id="@+id/btn_page2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"/>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_humor_img"
        android:layout_above="@id/rl_pages"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>
</RelativeLayout>
