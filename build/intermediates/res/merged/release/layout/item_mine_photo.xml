<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F4"
    android:orientation="horizontal"
    tools:ignore="DisableBaselineAlignment" >

    <LinearLayout
        android:id="@+id/ll_jifen"
        android:background="#EFF0F4"
        android:layout_width="0dp"
        android:layout_height="172dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_jifen"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_mine_month"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2月"
                android:textColor="@color/title_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mine_jifen"
                android:gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_alignBottom="@+id/tv_mine_month"
                android:layout_toRightOf="@+id/tv_mine_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月总积分为200"
                android:textColor="@color/title_color"
                android:textSize="13sp" />
            
            <TextView
                android:id="@+id/tv_mine_people_num"
                android:gravity="bottom"
                android:layout_alignLeft="@+id/tv_mine_month"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_mine_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参加活动人数47"
                android:textColor="@color/title_color"
                android:textSize="13sp" />
            
			<com.baoluo.community.ui.customview.HorizontalListView
                android:id="@+id/hlv_new_user"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/tv_mine_people_num"
                android:layout_width="match_parent"
                android:layout_height="26dp" />
        </RelativeLayout>
        <ImageView 
            android:id="@+id/iv_mine_pic"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="0dp"
        android:layout_height="172dp"
        android:layout_marginTop="10dp"
        android:layout_weight="9" >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_no_pic" />
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_mine_eventimg" />
        <TextView 
            android:id="@+id/tv_photo_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="#e6e6e6"
            android:textSize="13sp"
            android:text="1/20"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_alignRight="@+id/iv_photo"/>
    </RelativeLayout>

</LinearLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/item_mine_photo.xml -->