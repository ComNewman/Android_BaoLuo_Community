<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_main_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_main_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <com.baoluo.community.ui.customview.BottomMenuView
                android:id="@+id/bv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                lls:btn_bg="@drawable/selector_btn_home_msg"
                lls:btn_name="消息" >

                <TextView
                    android:id="@+id/tv_main_msg_num"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="8dp"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_main_msg_num"/>
            </com.baoluo.community.ui.customview.BottomMenuView>
        </RelativeLayout>

        <com.baoluo.community.ui.customview.BottomMenuView
            android:id="@+id/bv_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            lls:btn_bg="@drawable/selector_btn_home_contacts"
            lls:btn_name="通讯录" />

        <RelativeLayout
            android:id="@+id/rl_main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </RelativeLayout>

        <com.baoluo.community.ui.customview.BottomMenuView
            android:id="@+id/bv_baoluo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            lls:btn_bg="@drawable/selector_btn_home_baoluo"
            lls:btn_name="宝落" />

        <com.baoluo.community.ui.customview.BottomMenuView
            android:id="@+id/bv_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            lls:btn_bg="@drawable/selector_btn_home_mine"
            lls:btn_name="个人" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_main_footer" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_main_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/iv_main_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_center_nan" />
    </FrameLayout>

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/activity_main.xml -->