<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.baoluo.community.ui.customview.RoundImageView
        android:id="@+id/img_event_comment_head"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/head_default"/>

    <TextView
        android:id="@+id/tv_event_comment_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_event_comment_head"
        android:layout_alignTop="@+id/img_event_comment_head"
        android:layout_marginLeft="8dp"
        android:text="昵称"
        android:textColor="#333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_event_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/tv_event_comment_nick"
        android:layout_alignLeft="@+id/tv_event_comment_nick"
        android:layout_alignRight="@+id/tv_event_comment_time"
        android:gravity="left"
        android:text="评论内容"
        android:maxLines="3"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_event_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_event_comment_nick"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="10分钟前"
        android:textColor="#999999"
        android:textSize="10sp" />
    <View 
        android:id="@+id/view_fenge"
        android:background="#dbdbdb"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/event_details_comments_item.xml -->