<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_send_color">
    
    <RelativeLayout 
        android:id="@+id/rl_2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/send_margin_width"
        android:layout_marginRight="@dimen/send_margin_width"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_white_radius_border">
        <RelativeLayout 
            android:id="@+id/rl_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_dashed_box">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_send_cover"/>
            <ImageView 
		        android:id="@+id/iv_cover"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/rl_img_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@id/rl_cover"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_dashed_box">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_send_add_big"/>
            <ImageView 
	            android:id="@+id/iv_img_2"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"/>
        </RelativeLayout>
        
        <ImageView 
            android:id="@+id/iv_add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_img_2"
            android:src="@drawable/icon_send_img"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_add_img"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/send_normal_font_size"
            android:textColor="@color/send_text_color"
            android:text="添加图片"/>
        
        <RelativeLayout
            android:id="@+id/rl_img_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rl_cover"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_dashed_box">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_send_add"/>
            <ImageView
	           android:id="@+id/iv_img_3"
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"/>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/rl_img_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/rl_img_3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dashed_box">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_send_add"/>
            <ImageView
	            android:id="@+id/iv_img_4"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_img_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/rl_img_3"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_dashed_box">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_send_add"/>
            <ImageView
	            android:id="@+id/iv_img_5"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_2_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_2_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/send_margin_width"
        android:layout_marginRight="@dimen/send_margin_width"
        android:padding="10dp"
        android:background="@drawable/bg_white_radius_border">
        <ImageView 
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_send_tag"/>
        <TextView 
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_tag"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/send_normal_font_size"
            android:textColor="@color/send_text_color"
            android:text="标签"/>
        <RelativeLayout 
            android:id="@+id/rl_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tag"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/btn_tag_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@drawable/selector_text_color_tag_task_green"
                android:textSize="@dimen/send_normal_font_size"
                android:background="@drawable/selector_btn_tag_task_green"
                android:padding="5dp"
                android:text="悬赏任务"/>
            <Button
                android:id="@+id/btn_tag_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@drawable/selector_text_color_tag_task_blue"
                android:textSize="@dimen/send_normal_font_size"
                android:background="@drawable/selector_btn_tag_task_blue"
                android:text="悬赏任务"/>
            <Button
                android:id="@+id/btn_tag_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@drawable/selector_text_color_tag_task_purple"
                android:textSize="@dimen/send_normal_font_size"
                android:background="@drawable/selector_btn_tag_task_purple"
                android:text="悬赏任务"/>
            <com.baoluo.community.ui.customview.AddTagsView 
                android:visibility="gone"
                android:layout_below="@+id/btn_tag_green"
                android:layout_marginTop="5dp"
                android:id="@+id/atv_activity_select_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btn_add_tag"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_tag_green"
                android:textColor="@color/send_tag_color"
                android:textSize="@dimen/send_normal_font_size"
                android:background="@drawable/btn_bg_tag_dashed"
                android:text="添加标签"/>
            
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rl_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_2_content_2"
        android:layout_marginLeft="@dimen/send_margin_width"
        android:layout_marginRight="@dimen/send_margin_width"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_error_warn"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_warn"
            android:layout_alignTop="@id/iv_warn"
            android:layout_alignBottom="@id/iv_warn"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:textColor="@color/send_text_color_tint"
            android:textSize="@dimen/send_normal_font_size"
            android:text="第一张图片为封面，最多添加五张图片"/>
    </RelativeLayout>
    
</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/aty_activity_send_3.xml -->