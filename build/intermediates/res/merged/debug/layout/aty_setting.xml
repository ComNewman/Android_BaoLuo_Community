<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.baoluo.community.ui.customview.HeadView
        android:id="@+id/hv_setting_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lls:left_icon="@drawable/ic_fanhui_nor"
        lls:title_value="@string/head_title_setting"/>

    <RelativeLayout
        android:id="@+id/rl_setting_safety"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        >

        <TextView
            style="@style/text_setting_main"
            android:id="@+id/tv_setting_clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:text="@string/setting_safety"
            />

        <ImageView
            android:id="@+id/iv_setting_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_mine_right_small" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_fenge" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_setting_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_setting_msg"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                style="@style/text_setting_main"
                android:id="@+id/tv_setting_recive_publish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="@string/setting_msg"
                />

            <ImageView
                android:id="@+id/iv_setting_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/btn_mine_right_small" />
        </RelativeLayout>
		 <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_fenge" />
		 <RelativeLayout
            android:id="@+id/rl_setting_change_pswd"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                style="@style/text_setting_main"
                android:id="@+id/tv_setting_change_pswd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="@string/setting_change_pswd"
                />

            <ImageView
                android:id="@+id/iv_setting_change_pswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/btn_mine_right_small" />
        </RelativeLayout>
		 <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_fenge" />
        <RelativeLayout
            android:id="@+id/rl_setting_about"
            android:layout_width="match_parent"
            android:layout_height="46dp" >

            <TextView
                style="@style/text_setting_main"
                android:id="@+id/tv_setting_voice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="@string/setting_about"
               	/>

            <TextView
                android:id="@+id/iv_setting_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/humor_filtrate_color_defult"
                android:text="1.0.0"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_fenge" />
		
    </LinearLayout>


</LinearLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/aty_setting.xml -->