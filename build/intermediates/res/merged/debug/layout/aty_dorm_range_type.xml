<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent" >

        <ImageButton
            android:id="@+id/ib_drom_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/btn_drom_group_single_chat"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_drom_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ib_drom_single"
            android:layout_alignRight="@+id/ib_drom_single"
            android:layout_below="@+id/ib_drom_single"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="单聊"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/ib_drom_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/ib_drom_single"
            android:background="@color/transparent"
            android:src="@drawable/btn_drom_group_chat" />

        <TextView
            android:id="@+id/tv_drom_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ib_drom_group"
            android:layout_alignRight="@+id/ib_drom_group"
            android:layout_below="@+id/ib_drom_group"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="群聊"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/aty_dorm_range_type.xml -->