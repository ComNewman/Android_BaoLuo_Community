<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="28dp">
    <com.baoluo.community.ui.customview.RoundImageView
       android:id="@+id/rv_avatar"
       android:layout_width="38dp"
       android:layout_height="38dp"
       lls:border_inside_color="#fffff1" 
       lls:border_thickness="1dp"/>
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rv_avatar"
        android:layout_alignLeft="@+id/rv_avatar"
        android:layout_below="@id/rv_avatar"
        android:gravity="center_horizontal"
        android:textColor="#666666"
        android:textSize="12sp"
        android:singleLine="true" 
        android:ellipsize="end"/>
</RelativeLayout>
