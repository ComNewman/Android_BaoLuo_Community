<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_sel_location">
    <Button
        android:id="@+id/btn_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_btn_tags_sure"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="其他位置"/>
    <EditText 
        android:id="@+id/et_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_other"
        android:background="@drawable/bg_search"
        android:textColor="#3B3636"
        android:textSize="13sp"
        android:paddingLeft="4dp"
        android:hint="这是默认地理位置"/>
    <RelativeLayout 
        android:id="@+id/rl_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_loc"
        android:layout_marginTop="13dp">
        <TextView 
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#ADADAD"
            android:text="添加自定义地址信息"/>
    </RelativeLayout>
    <Button 
        android:id="@+id/btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/bg_btn_tags_sure"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="确定"/>
    <com.baoluo.community.ui.xlistview.XListView
        android:id="@+id/xv_locs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sure"
        android:layout_below="@id/rl_custom"
        android:divider="@null"
        android:layout_marginTop="13dp"/>
</RelativeLayout>
