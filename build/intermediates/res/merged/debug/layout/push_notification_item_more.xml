<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA" >

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_notification_time"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="2015年7月15号  12:25" />

    <RelativeLayout
        android:id="@+id/rl_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notification_time"
        android:layout_margin="15dp"
        android:background="@drawable/bg_white_radius_border" >

        <ImageView
            android:id="@+id/iv_notification_first_pic"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_margin="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_humor_test" />

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_notification_first_pic"
            android:layout_alignLeft="@+id/iv_notification_first_pic"
            android:layout_alignRight="@+id/iv_notification_first_pic"
            android:background="@drawable/bg_notification_title"
            android:padding="5dp"
            android:text="学校正在举行喝农药大赛"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_notification_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_notification_first_pic"
            android:layout_margin="11dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_notification_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="test for textsize!"
                android:textColor="#323232"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_notification_second"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@drawable/img_notification_second_pic_test" />
        </LinearLayout>
        <View 
            android:id="@+id/view_second"
            android:layout_below="@+id/ll_notification_second"
            android:layout_width="match_parent"
             android:layout_alignLeft="@+id/ll_notification_second"
            android:layout_alignRight="@+id/ll_notification_second"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_norification_split"/>
         <LinearLayout
            android:id="@+id/ll_notification_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_notification_second"
            android:layout_margin="11dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_notification_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="test for textsize!"
                android:textColor="#323232"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_notification_thrid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@drawable/img_notification_second_pic_test" />
        </LinearLayout>
        <View 
            android:id="@+id/view_thrid"
            android:layout_above="@+id/ll_notification_four"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/ll_notification_second"
            android:layout_alignRight="@+id/ll_notification_second"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_norification_split"/>
         <LinearLayout
            android:id="@+id/ll_notification_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_notification_third"
            android:layout_margin="11dp"
            android:paddingBottom="11dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_notification_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="test for textsize!"
                android:textColor="#323232"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_notification_four"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@drawable/img_notification_second_pic_test" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/push_notification_item_more.xml -->