<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/rl_dorm_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_dorm_gradual" >

        <ImageView
            android:id="@+id/img_dorm_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/btn_back" />

        <Button
            android:id="@+id/btn_dorm_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn_dorm_publish" />

        <LinearLayout
            android:id="@+id/ll_dorm_titile"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_dorm_title_base"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_dorm_random"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_dorm_random"
                android:gravity="center"
                android:text="随机"
                android:textColor="@drawable/selector_color_dorm_title" />

            <Button
                android:id="@+id/btn_dorm_singer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_dorm_single"
                android:gravity="center"
                android:text="单聊"
                android:textColor="@drawable/selector_color_dorm_title" />

            <Button
                android:id="@+id/btn_dorm_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_dorm_group"
                android:gravity="center"
                android:text="群聊"
                android:textColor="@drawable/selector_color_dorm_title" />
        </LinearLayout>
    </RelativeLayout>
	 <com.baoluo.community.ui.xlistview.XListView
        android:id="@+id/xv_dorm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_dorm_top"
        android:divider="@null"
        android:background="@color/content_bg_color"/>
</RelativeLayout><!-- From: file:/E:/work/Docs/workspace/Android_BaoLuo_Community/res/layout/aty_dorm.xml -->