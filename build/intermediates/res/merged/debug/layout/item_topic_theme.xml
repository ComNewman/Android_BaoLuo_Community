<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white">
    
    <RelativeLayout 
        android:id="@+id/rl_topic_theme_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        >
        <com.baoluo.community.ui.customview.RoundImageView 
            android:id="@+id/riv_topic_theme"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/head_default"
            />
        
        
        <TextView 
            android:id="@+id/tv_topic_theme_nick"
            style="@style/text_mid"
            android:layout_toRightOf="@+id/riv_topic_theme"
            android:layout_alignTop="@+id/riv_topic_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="张无忌"
            />
        <TextView 
            android:id="@+id/tv_topic_theme_sex"
            android:background="@drawable/bg_topic_nan"
            android:layout_toRightOf="@+id/tv_topic_theme_nick"
            android:layout_alignTop="@+id/riv_topic_theme"
            android:layout_alignBottom="@+id/tv_topic_theme_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="9sp"
            android:gravity="center"
            android:textColor="@color/topic_nan"
            android:text="男"
            />
         <TextView 
            android:id="@+id/tv_topic_theme_lv"
            android:background="@drawable/bg_topic_lv"
            android:layout_toRightOf="@+id/tv_topic_theme_sex"
            android:layout_alignTop="@+id/riv_topic_theme"
            android:layout_alignBottom="@+id/tv_topic_theme_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/topic_lv"
            android:text="Lv1"
            />
        <ImageView 
            android:id="@+id/iv_topic_theme_time"
            android:layout_toRightOf="@+id/riv_topic_theme"
            android:layout_alignBottom="@+id/riv_topic_theme"
            android:layout_alignLeft="@+id/tv_topic_theme_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_topic_theme_time"
            />
          
        <TextView 
            android:id="@+id/tv_topic_theme_time"
            style="@style/text_small_tinge"
            android:layout_toRightOf="@+id/iv_topic_theme_time"
            android:layout_alignBottom="@+id/riv_topic_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="5分钟前"
            />
         
        <ImageView 
            android:id="@+id/iv_topic_theme_location"
            android:layout_toRightOf="@+id/tv_topic_theme_time"
            android:layout_alignBottom="@+id/riv_topic_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_topic_theme_location"
            />
          
        <TextView 
            android:id="@+id/tv_topic_theme_location"
            style="@style/text_small_tinge"
            android:layout_toRightOf="@+id/iv_topic_theme_location"
            android:layout_alignBottom="@+id/riv_topic_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="深圳市宝安体育馆"
            />
    </RelativeLayout>
    <TextView 
        android:id="@+id/tv_topic_theme_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_mid"
        android:text="#张无忌是谁# 的感觉额偶功能共轭机构及机构诶蒋工 个哦蒋工"
        />
    
    <ImageView 
        android:id="@+id/iv_topic_theme_pic"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:src="@drawable/bg_no_pic"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"/>
    <LinearLayout 
        android:id="@+id/ll_topic_theme_priase_comment"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:id="@+id/rl_topic_theme_praise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button 
                android:id="@+id/btn_topic_theme_praise"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="  5"
                style="@style/text_small_tinge"
                android:drawableLeft="@drawable/btn_topic_item_praise"
                />
        </RelativeLayout>
         <RelativeLayout 
            android:id="@+id/rl_topic_theme_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button 
                android:id="@+id/btn_topic_theme_comment"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="  5"
                style="@style/text_small_tinge"
                android:drawableLeft="@drawable/ic_topic_theme_comment"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#EEEEEE"/>
</LinearLayout>
