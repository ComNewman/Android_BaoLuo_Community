<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec" >

    <com.baoluo.community.ui.customview.HeadView
        android:id="@+id/about_headview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        lls:left_icon="@drawable/ic_fanhui_nor"
        lls:title_value="@string/head_title_about" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_headview"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_white_radius_border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_about_baoluo_introduce"
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <TextView
                android:id="@+id/tv_about_baoluo_introduce"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="功能介绍"
                android:textColor="#1a1a1a"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_about_baoluo_introduce_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_mine_right_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_about_baoluo_help"
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <TextView
                android:id="@+id/tv_about_baoluo_help"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="帮助与反馈"
                android:textColor="#1a1a1a"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_about_baoluo_help_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_mine_right_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_about_baoluo_recommend"
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <TextView
                android:id="@+id/tv_about_baoluo_recommend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="推荐给好友"
                android:textColor="#1a1a1a"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_about_baoluo_recommend_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_mine_right_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_about_baoluo_versions"
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <TextView
                android:id="@+id/tv_about_baoluo_versions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="当前版本"
                android:textColor="#1a1a1a"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_about_baoluo_versions_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_mine_right_small" />

            <TextView
                android:id="@+id/tv_about_baoluo_versions_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/iv_about_baoluo_versions_right"
                android:text="V1.0"
                android:textColor="#adadad"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_exit"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>