<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="178"
    android:background="@color/white"
    tools:ignore="UnusedAttribute" >

    <ImageButton
        android:id="@+id/ib_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_fanhui_nor" />

    <Button
        android:id="@+id/tv_title_title"
        android:drawableRight="@drawable/ic_xiangxia_nor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_centerInParent="true"
        android:text="活动"
        android:textColor="#ff7f7e"
        android:textSize="16sp" />
     <ImageButton
        android:id="@+id/ib_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_chuangjian" />
    

</RelativeLayout>