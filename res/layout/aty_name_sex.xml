<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >

    <RelativeLayout
        android:id="@+id/rl_name_sex"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_circular" >

        <TextView
            android:id="@+id/tv_name_sex_nick"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_name_sex_nick"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/tv_name_sex_nick"
            android:layout_alignTop="@+id/tv_name_sex_nick"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/tv_name_sex_nick"
            android:background="@drawable/bg_reg_input"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_name_sex_nick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@color/transparent"
                android:hint="输入昵称"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name_sex_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name_sex_nick"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_sex_sex_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="#333333"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_name_sex_man"
                style="@style/boy_checkbox"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
             <TextView
                android:id="@+id/tv_name_sex_sex_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text="女"
                android:textColor="#333333"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_name_sex_nv"
                style="@style/gril_checkbox"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_name_sex_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name_sex_sex"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/btn_reg_reg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_below="@+id/btn_name_sex_sure"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_reg_projection" />
    </RelativeLayout>

</RelativeLayout>