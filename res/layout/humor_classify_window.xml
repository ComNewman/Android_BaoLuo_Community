<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <View
        android:id="@+id/view_fenge"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dbdbdb" />

    <TextView
        android:id="@+id/tv_classify_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fenge"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:text="性别"
        android:textColor="#333333"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_classify_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_classify_sex"
        android:layout_below="@+id/tv_classify_sex"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_classify_all"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="全部"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_m"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="男"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_g"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="女"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_classify_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_classify_sex"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:text="范围"
        android:textColor="#333333"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_classify_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_classify_sex"
        android:layout_below="@+id/tv_classify_range"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_classify_range_near"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="附近"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_range_city"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="同城"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_range_all"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="不限"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_classify_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_classify_range"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:text="热度"
        android:textColor="#333333"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_classify_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_classify_sex"
        android:layout_below="@+id/tv_classify_hot"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_classify_hot_one"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="一天"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_hot_three"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="三天"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classify_hot_seven"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_classify_item"
            android:clickable="true"
            android:gravity="center"
            android:text="七天"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>