<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/img_event_item"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_event_item_test" />

    <TextView
        android:id="@+id/tv_event_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_event_item"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_event_item"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="毕设互助计划"
        android:textColor="#333333"
        android:textSize="10sp"  />

    <ImageView
        android:id="@+id/img_event_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_event_item_title"
        android:layout_below="@+id/img_event_item_start_time"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/tv_event_item_start_time"
        android:layout_toRightOf="@+id/img_event_item"
        android:src="@drawable/ic_didian_nor" />

    <TextView
        android:id="@+id/tv_event_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_event_item_location"
        android:layout_alignTop="@+id/img_event_item_location"
        android:layout_alignLeft="@+id/tv_event_item_start_time"
        android:layout_below="@+id/tv_event_item_title"
        android:layout_toRightOf="@+id/img_event_item_location"
        android:gravity="center_vertical"
        android:text="深职图书馆"
        android:textColor="#666666"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/img_event_item_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/tv_event_item_title"
        android:layout_below="@+id/tv_event_item_title"
        android:layout_toRightOf="@+id/img_event_item"
        android:src="@drawable/ic_shijian_nor" />

    <TextView
        android:id="@+id/tv_event_item_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/img_event_item_start_time"
        android:layout_alignTop="@+id/img_event_item_start_time"
        android:layout_toRightOf="@+id/img_event_item_start_time"
        android:text="6/20 9:30"
        android:textColor="#666666"
        android:textSize="8sp" />
	<TextView 
	    android:id="@+id/tv_event_send_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/img_event_item"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:textSize="7dp"
	    android:textColor="#999999"
	    android:text="5分钟前发布"/>

	<com.baoluo.community.ui.customview.TagsView 
        android:id="@+id/tagsview_event_item_tags"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_event_item_location"
        android:layout_alignLeft="@+id/tv_event_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View 
        android:id="@+id/view_buttom"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/img_event_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dbdbdb"/>
</RelativeLayout>