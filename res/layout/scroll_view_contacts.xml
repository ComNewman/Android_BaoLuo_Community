<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_sc_for_contacts"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:id="@+id/ll_for_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_contacts_attend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <ImageView
                    android:id="@+id/img_contacts_attend_head"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/default_head" />

                <TextView
                    android:id="@+id/tvcontacts_attend__title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="我的关注"
                    android:textColor="#336598" />
            </LinearLayout>
            <View 
                android:id="@+id/view_spilit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_topic_item_spilit"/>
			<LinearLayout
                android:id="@+id/ll_contacts_tribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <ImageView
                    android:id="@+id/img_contacts_tribe_head"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/default_head" />

                <TextView
                    android:id="@+id/tv_contacts_tribe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="我的部落"
                    android:textColor="#336598" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.baoluo.community.ui.customview.ListViewForScrollView
                    android:id="@+id/lv_friend_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_dialog"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_humor_content"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <com.baoluo.community.ui.customview.SideBar
                    android:id="@+id/sb_side_bar"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>