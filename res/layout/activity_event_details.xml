<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <com.baoluo.community.ui.xscrollview.XScrollView
        android:id="@+id/event_scrollview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/siv_event_details"
        android:layout_alignParentTop="true" >
    </com.baoluo.community.ui.xscrollview.XScrollView>
   
    <com.baoluo.community.ui.customview.HeadView
        android:id="@+id/hv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        lls:left_icon="@drawable/ic_fanhui_nor"
        lls:title_value="活动详情" />
    <com.baoluo.community.ui.customview.SmInputView 
        android:id="@+id/siv_event_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" 
        />
   

</RelativeLayout>